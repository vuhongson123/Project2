@model KFCManagement.Models.Reservation

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc muốn xóa mục này không?</h3>
<div>
    <h4>Thông Tin Đặt Bàn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Table)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Table.TableId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ReservationId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>

    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #5f3812;
            text-align: center;
            font-size: 30px;
            font-weight: 700;
        }

        h3 {
            color: #5f3812;
            font-size: 24px;
        }

        h4 {
            color: #5f3812;
        }

        .form-group label {
            font-weight: bold;
            color: #5f3812;
        }

        .btn-danger {
            background-color: #d84f2b;
            color: white;
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-danger:hover {
                background-color: #5f3812;
            }

        .btn-secondary {
            background-color: #cea377;
            color: #5f3812;
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-secondary:hover {
                background-color: #d84f2b;
                color: white;
            }

        dl dt {
            font-weight: bold;
            color: #5f3812;
        }

        dl dd {
            font-style: italic;
        }
    </style>
