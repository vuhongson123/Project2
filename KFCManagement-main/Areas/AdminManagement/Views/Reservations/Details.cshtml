@model KFCManagement.Models.Reservation

@{
    ViewData["Title"] = "Chi Tiết Đặt Bàn";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Chi Tiết Đặt Bàn</h1>

<div>
    <h4>Thông Tin Đặt Bàn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Table)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Table.TableId)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ReservationId" class="btn btn-warning">Chỉnh Sửa</a> 
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #5f3812;
            text-align: center;
            font-size: 30px;
            font-weight: 700;
        }

        h4 {
            color: #5f3812;
        }

        .form-group label {
            font-weight: bold;
            color: #5f3812;
        }

        .btn-warning {
            background-color: #d84f2b;
            color: white;
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-warning:hover {
                background-color: #5f3812;
            }

        .btn-secondary {
            background-color: #cea377;
            color: #5f3812;
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-secondary:hover {
                background-color: #d84f2b;
                color: white;
            }

        dl dt {
            font-weight: bold;
            color: #5f3812;
        }

        dl dd {
            font-style: italic;
        }
    </style>
