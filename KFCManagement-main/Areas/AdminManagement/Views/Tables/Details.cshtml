@model KFCManagement.Models.Table

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
 
    h1 {
        color: #e2002b;
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    h4 {
        color: #202124;
        margin-bottom: 15px;
    }

    .dl-horizontal {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10px;
    }

        .dl-horizontal dt {
            font-weight: 600;
            color: #555;
            padding: 10px;
            text-align: left;
        }

        .dl-horizontal dd {
            padding: 10px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

    .btn-primary {
        background-color: #e2002b;
        border-color: #e2002b;
        color: #ffffff;
        margin-right: 10px;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #c50024;
            border-color: #c50024;
        }

    .btn-secondary {
        background-color: #202124;
        border-color: #202124;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-secondary:hover {
            background-color: #555;
            border-color: #555;
        }

    /* Icons */
    .dl-horizontal dt i {
        margin-right: 5px;
    }

    .btn i {
        margin-right: 5px;
    }
</style>

<h1>Chi Tiết Bàn</h1>

<div>
    <h4>Thông Tin Bàn</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <i class="fas fa-table"></i> @Html.DisplayNameFor(model => model.TableNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TableNumber)
        </dd>
        <dt>
            <i class="fas fa-chair"></i> @Html.DisplayNameFor(model => model.SeatingCapacity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SeatingCapacity)
        </dd>
        <dt>
            <i class="fas fa-check-circle"></i> @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt>
            <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt>
            <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.TableId" class="btn btn-primary"><i class="fas fa-edit"></i> Chỉnh Sửa</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở Lại Danh Sách</a>
</div>