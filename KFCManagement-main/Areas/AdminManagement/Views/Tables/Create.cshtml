@model KFCManagement.Models.Table

@{
    ViewData["Title"] = "Tạo Mới Bàn";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
 

    h1 {
        color: #e2002b;
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    h4 {
        color: #202124;
        margin-bottom: 15px;
    }

    .row {
        justify-content: center; /* Center the form */
    }

    .col-md-6 {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: 600;
        color: #555;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px;
    }

        .form-control:focus {
            border-color: #e2002b;
            outline: none;
            box-shadow: 0 0 5px rgba(226, 0, 43, 0.2);
        }

    .text-danger {
        color: #e2002b;
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: #e2002b;
        border-color: #e2002b;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #c50024;
            border-color: #c50024;
        }

    .btn-secondary {
        background-color: #202124;
        border-color: #202124;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-secondary:hover {
            background-color: #555;
            border-color: #555;
        }

    /* Icons */
    .form-group i {
        margin-right: 5px;
    }

    .btn i {
        margin-right: 5px;
    }
</style>

<h1>Tạo Mới Bàn</h1>

<h4>Thông Tin Bàn</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TableNumber" class="control-label"><i class="fas fa-table"></i> Số Bàn</label>
                <input asp-for="TableNumber" class="form-control" />
                <span asp-validation-for="TableNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatingCapacity" class="control-label"><i class="fas fa-chair"></i> Sức Chứa</label>
                <input asp-for="SeatingCapacity" class="form-control" />
                <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Tạo Mới</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở Lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}