@model KFCManagement.Models.Customer

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
 

    h1 {
        color: #e2002b;
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    h3 {
        color: #202124;
        margin-bottom: 15px;
        text-align: center; /* Center the "Are you sure?" message */
    }

    h4 {
        color: #202124;
        margin-bottom: 15px;
    }

    .dl-horizontal {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10px;
    }

        .dl-horizontal dt {
            font-weight: 600;
            color: #555;
            padding: 10px;
            text-align: left;
        }

        .dl-horizontal dd {
            padding: 10px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

    .btn-danger {
        background-color: #e2002b;
        border-color: #e2002b;
        color: #ffffff;
        margin-right: 10px;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-danger:hover {
            background-color: #c50024;
            border-color: #c50024;
        }

    .btn-info {
        background-color: #17a2b8; /* Blue */
        border-color: #17a2b8;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-info:hover {
            background-color: #138496; /* Darker blue */
            border-color: #138496;
        }

    /* Icons */
    .dl-horizontal dt i {
        margin-right: 5px;
    }

    .btn i {
        margin-right: 5px;
    }
</style>

<h1>Xóa Khách Hàng</h1>

<h3>Bạn có chắc chắn muốn xóa không?</h3>

<div>
    <h4>Thông Tin Khách Hàng</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            <i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            <i class="fas fa-key"></i> @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt>
            <i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt>
            <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt>
            <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
        <a asp-action="Index" class="btn btn-info"><i class="fas fa-arrow-left"></i> Quay Lại Danh Sách</a>
    </form>
</div>