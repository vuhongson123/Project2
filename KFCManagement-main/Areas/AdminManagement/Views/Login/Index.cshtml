@model KFCManagement.Areas.AdminManagement.Models.Login
@{
    Layout = null;
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập Admin</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <style>
        body {
            background-color: #f4f4f4; /* Light gray background */
            font-family: 'Arial', sans-serif; /* Modern font */
            color: #202124; /* Dark gray text */
        }

        .login-box {
            width: 400px;
            margin: 80px auto;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15); /* Softer shadow */
            padding: 30px; /* Increased padding */
            border-radius: 8px;
            background-color: #ffffff;
            border: 2px solid #e2002b; /* Red border */
        }

        .login-title {
            font-weight: 700;
            font-size: 2rem; /* Larger title */
            color: #e2002b; /* Red title */
            text-align: center;
            margin-bottom: 25px; /* Increased margin */
        }

        .custom-input {
            border-radius: 5px; /* Slightly less rounded inputs */
            margin-bottom: 15px; /* Space between inputs */
            height: 40px; /* Adjusted height */
            padding: 10px; /* Add padding inside input */
            border: 1px solid #ddd; /* Light gray border */
        }

            .custom-input:focus {
                border-color: #e2002b; /* Red border on focus */
                outline: none;
                box-shadow: 0 0 5px rgba(226, 0, 43, 0.2); /* Red glow on focus */
            }


        .btn-primary {
            width: 100%;
            border-radius: 5px;
            background-color: #e2002b; /* Red button */
            border-color: #e2002b;
            color: #ffffff;
            padding: 12px; /* Adjusted padding */
            font-size: 1rem;
            font-weight: 500; /* Slightly less bold */
            transition: background-color 0.3s ease; /* Smooth transition */
        }

            .btn-primary:hover {
                background-color: #c50024; /* Darker red on hover */
                border-color: #c50024;
            }

        .alert {
            margin-top: 20px;
            font-size: 14px;
            color: #e2002b; /* Red alert text */
            background-color: #ffe6e6; /* Very light red background for alert */
            border-color: #e2002b; /* Red border */
        }


        .login-title {
            font-size: 1.8rem;
        }

    </style>
</head>
<body class="hold-transition login-page">

    <div class="login-box">
        <div class="login-title">Đăng nhập Admin</div>
        <form asp-action="Index" method="post">
            <!-- Email input -->
            <input asp-for="Email" type="email" class="custom-input form-control form-control-lg"
                   placeholder="Email" required />

            <!-- Password input -->
            <input asp-for="Password" type="password" class="custom-input form-control form-control-lg"
                   placeholder="Mật khẩu" required />

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Đăng nhập</button>
        </form>
    </div>

    <!-- Scripts -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>
