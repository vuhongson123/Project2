@model KFCManagement.Models.Category

@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
 

    h1 {
        color: #e2002b;
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    h4 {
        color: #202124;
        margin-bottom: 15px;
    }

    .dl-horizontal {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10px;
    }

        .dl-horizontal dt {
            font-weight: 600;
            color: #555;
            padding: 10px;
            text-align: left;
        }

        .dl-horizontal dd {
            padding: 10px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

    .btn-warning {
        background-color: #ffc107; /* Yellow */
        border-color: #ffc107;
        color: #202124;
        margin-right: 10px;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-warning:hover {
            background-color: #e0a800; /* Darker yellow */
            border-color: #e0a800;
        }

    .btn-secondary {
        background-color: #202124;
        border-color: #202124;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-secondary:hover {
            background-color: #555;
            border-color: #555;
        }

    /* Icons */
    .dl-horizontal dt i {
        margin-right: 5px;
    }

    .btn i {
        margin-right: 5px;
    }
</style>

<h1>Chi Tiết Danh Mục</h1>

<div>
    <h4>Thông Tin Danh Mục</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <i class="fas fa-tag"></i> Tên Danh Mục
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            <i class="fas fa-file-alt"></i> Mô Tả
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            <i class="fas fa-calendar-alt"></i> Ngày Tạo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt>
            <i class="fas fa-calendar-alt"></i> Ngày Cập Nhật
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning"><i class="fas fa-edit"></i> Chỉnh Sửa</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại Danh Sách</a>
</div>