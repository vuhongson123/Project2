@model IEnumerable<KFCManagement.Models.Category>

@{
    ViewData["Title"] = "Danh Sách Danh Mục";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    /* General Styles */
    body {
        font-family: 'Arial', sans-serif;
        color: #202124;
        background-color: #f4f4f4;
    }

    h1 {
        color: #e2002b;
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .btn-success {
        background-color: #28a745; /* Green */
        border-color: #28a745;
        color: #ffffff;
        margin-bottom: 20px;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #218838;
        }

    /* Table Styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f8f9fa;
            color: #202124;
            font-weight: 600;
        }

        .table tr:hover {
            background-color: #f5f5f5;
        }

    /* Action Buttons */
    .btn-warning, .btn-info, .btn-danger {
        margin: 0 5px;
        padding: 8px 15px;
        font-size: 0.9rem;
    }

    .btn-warning {
        background-color: #ffc107; /* Yellow */
        border-color: #ffc107;
        color: #202124;
    }

    .btn-info {
        background-color: #17a2b8; /* Blue */
        border-color: #17a2b8;
        color: #ffffff;
    }

    .btn-danger {
        background-color: #dc3545; /* Red */
        border-color: #dc3545;
        color: #ffffff;
    }

    /* Icons */
    .table i {
        margin-right: 5px;
    }

    .btn i {
        margin-right: 5px;
    }
</style>

<h1>Danh Sách Danh Mục</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Tạo Mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th><i class="fas fa-tag"></i> @Html.DisplayNameFor(model => model.Name)</th>
            <th><i class="fas fa-file-alt"></i> @Html.DisplayNameFor(model => model.Description)</th>
            <th><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.UpdatedAt)</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info"><i class="fas fa-info-circle"></i> Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>