@model KFCManagement.Models.Admin

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
 

    h1 {
        color: #e2002b;
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    h3 {
        color: #202124;
        margin-bottom: 15px;
        text-align: center; /* Center the "Are you sure?" message */
    }

    h4 {
        color: #202124;
        margin-bottom: 15px;
    }

    .dl-horizontal { /* Use dl-horizontal for better layout */
        display: grid;
        grid-template-columns: 1fr 2fr; /* 1/3 for label, 2/3 for value */
        gap: 10px; /* Spacing between label and value */
    }

        .dl-horizontal dt {
            font-weight: 600;
            color: #555; /* Slightly lighter gray for labels */
            padding: 10px;
            text-align: left; /* Align labels to the left */
        }

        .dl-horizontal dd {
            padding: 10px;
            background-color: #ffffff; /* White background for values */
            border: 1px solid #ddd; /* Light gray border for values */
            border-radius: 5px;
        }

    .btn-danger {
        background-color: #e2002b;
        border-color: #e2002b;
        color: #ffffff;
        margin-right: 10px; /* Space between buttons */
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-danger:hover {
            background-color: #c50024;
            border-color: #c50024;
        }

    .btn-secondary { /* Style for the "Back to List" button */
        background-color: #202124;
        border-color: #202124;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-secondary:hover {
            background-color: #555;
            border-color: #555;
        }

    /* Icons */
    .dl-horizontal dt i {
        margin-right: 5px;
    }
</style>

<h1>Xóa Quản Trị Viên</h1>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4>Thông Tin Quản Trị Viên</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            <i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            <i class="fas fa-key"></i> @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt>
            <i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt>
            <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt>
            <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AdminId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>