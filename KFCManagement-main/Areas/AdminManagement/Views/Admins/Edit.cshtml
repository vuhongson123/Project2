@model KFCManagement.Models.Admin

@{
    ViewData["Title"] = "Chỉnh Sửa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    /* General Styles */
 

    h1 {
        color: #e2002b;
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
    }

    h4 {
        color: #202124;
        margin-bottom: 15px;
    }

    .row {
        justify-content: center; /* Center the form */
    }

    .col-md-6 {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: 600;
        color: #555;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px;
    }

        .form-control:focus {
            border-color: #e2002b;
            outline: none;
            box-shadow: 0 0 5px rgba(226, 0, 43, 0.2);
        }

    .text-danger {
        color: #e2002b;
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: #e2002b;
        border-color: #e2002b;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #c50024;
            border-color: #c50024;
        }

    .btn-secondary {
        background-color: #202124;
        border-color: #202124;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-secondary:hover {
            background-color: #555;
            border-color: #555;
        }

    /* Icons */
    .form-group i {
        margin-right: 5px;
    }

    .btn i {
        margin-right: 5px;
    }
</style>

<h1>Chỉnh Sửa Quản Trị Viên</h1>

<h4>Thông Tin Quản Trị Viên</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AdminId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"><i class="fas fa-user"></i> Tên Quản Trị Viên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"><i class="fas fa-envelope"></i> Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"><i class="fas fa-key"></i> Mật Khẩu</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"><i class="fas fa-phone"></i> Số Điện Thoại</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"><i class="fas fa-calendar-alt"></i> Ngày Tạo</label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UpdatedAt" class="control-label"><i class="fas fa-calendar-alt"></i> Ngày Cập Nhật</label>
                <input asp-for="UpdatedAt" class="form-control" />
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu Thay Đổi</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}