        text-align: center;
        margin-bottom: 20px;
    }

    .nav-tabs {
        border-bottom: none;
    }

        .nav-tabs .nav-link {
            border: 1px solid #ddd;
            border-radius: 25px;
            margin-right: 10px;
            color: var(--kfc-black);
            padding: 10px 20px;
            cursor: pointer;
        }

            .nav-tabs .nav-link.active {
                background-color: var(--kfc-red);
                color: var(--kfc-white);
                border-color: var(--kfc-red);
            }

    .book_tabs {
        text-align: center;
        margin-top: 30px;
    }

    .tabs_tt {
        color: var(--kfc-red);
        font-size: 1.8rem;
        margin-bottom: 10px;
    }

    .tabs_des {
        margin-bottom: 20px;
    }

    .book_slider {
        display: flex;
        overflow-x: auto;
        width: 100%;
        margin-bottom: 20px;
    }

        .book_slider .item {
            flex: 0 0 auto;
            margin-right: 10px;
        }

        .book_slider img {
            max-width: 300px;
            height: auto;
        }

    .btn_red {
        background-color: var(--kfc-red);
        color: var(--kfc-white);
        border: none;
        padding: 12px 25px;
        border-radius: 25px;
        cursor: pointer;
    }

        .btn_red:hover {
            background-color: #C20023;
        }

    .book_content {
        margin-top: 30px;
    }

    .main_tittle {
        color: var(--kfc-red);
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .accordion .card {
        border: 1px solid #ddd;
        margin-bottom: 10px;
    }

    .accordion .card-header {
        background-color: #f8f9fa;
    }

    .accordion .name_product {
        width: 100%;
        text-align: left;
        padding: 15px;
        color: var(--kfc-black);
        cursor: pointer;
    }

        .accordion .name_product:hover {
            background-color: #e9ecef;
        }

    .combo_book_body {
        padding: 20px;
    }

        .combo_book_body .item {
            margin-bottom: 20px;
        }

        .combo_book_body img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

    .book_combo_info {
        margin-top: 10px;
    }

        .book_combo_info h2 {
            font-size: 1.3rem;
            margin-bottom: 5px;
        }

    .book_combo_price {
        color: var(--kfc-red);
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form_book_body {
        padding: 20px;
    }

    .book_banner img {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .form_book_item {
