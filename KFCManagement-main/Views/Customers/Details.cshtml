@model KFCManagement.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Details Box Styling */
    .details-box {
        width: 800px; /* Wider box */
        margin: 50px auto; /* Centered with top margin */
        padding: 40px; /* More padding */
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15); /* Softer, more pronounced shadow */
        border: none; /* Removed the red border */
    }

    /* Details Title Styling */
    .details-title {
        font-size: 2.5rem; /* Larger title */
        color: #e2002b; /* Red title */
        margin-bottom: 30px;
        font-weight: 600; /* Slightly less bold */
        text-align: center; /* Center the title */
    }

    /* Customer Info Styling */
    .customer-info {
        margin-top: 20px;
    }

    /* Row Layout for Customer Information */
    dl.row {
        display: grid;
        grid-template-columns: 1fr 2fr; /* 1:2 ratio for labels and values */
        gap: 15px; /* Spacing between items */
        margin-bottom: 20px; /* Space between dl elements */
        border-bottom: 1px solid #eee; /* Subtle separator line */
        padding-bottom: 10px; /* Add some padding at the bottom */
    }

        dl.row:last-of-type {
            border-bottom: none; /* Remove separator from last item */
        }

        dl.row dt {
            font-weight: 500; /* Slightly less bold labels */
            color: #555; /* Darker gray labels */
            text-align: left; /* Align labels to the left */
            padding-top: 5px; /* Align label with value */
        }

        dl.row dd {
            color: #333; /* Dark gray values */
            text-align: left; /* Align values to the left */
            padding-top: 5px; /* Align value with label */
        }

    /* Action Buttons Styling */
    .action-buttons {
        margin-top: 40px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn { /* Common button styles */
        padding: 12px 25px; /* Adjusted padding */
        font-size: 1rem;
        font-weight: 500;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transitions */
        border: none; /* Remove default borders */
        cursor: pointer; /* Indicate it is clickable */
    }

    .btn-edit {
        background-color: #e2002b; /* Red background for edit */
        color: #ffffff;
    }

        .btn-edit:hover {
            background-color: #c50024; /* Darker red on hover */
        }

    .btn-back {
        background-color: #fff; /* White background for back */
        color: #333;
        border: 1px solid #ddd; /* Light gray border */
    }

        .btn-back:hover {
            background-color: #eee; /* Slightly darker background on hover */
            color: #333;
        }

    /* Responsive adjustments (if needed) */

    dl.row {
        grid-template-columns: 1fr; /* Stack labels and values */
        text-align: center; /* Center text within each item */
    }

        dl.row dt,
        dl.row dd {
            text-align: left; /* Align text to the left */
        }

    .details-title {
        font-size: 2rem; /* Reduce title size */
    }

    .btn {
        font-size: 0.9rem; /* Reduce button size */
        padding: 10px 20px; /* Reduce button padding */
    }


    .customer-info dl.row {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Two equal columns */
        gap: 20px; /* Increased gap */
    }

        .customer-info dl.row dt {
            grid-column: 1; /* Label in the first column */
            text-align: left; /* Align labels to the left */
            padding-top: 5px;
        }

        .customer-info dl.row dd {
            grid-column: 2; /* Value in the second column */
            text-align: left; /* Align values to the left */
            padding-top: 5px;
        }
</style>
<div class="details-box">
    <h1 class="details-title">Chi tiết người dùng</h1>

    <div class="customer-info">
        <hr />
        <dl class="row">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>
        </dl>
    </div>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.CustomerId" class="btn btn-edit">Sửa</a>
        <a onclick="window.history.back();" class="btn btn-back">Quay lại</a>
    </div>
</div>
